@article{GaoSTARFM2006,
  author    = {Gao, Feng and Masek, Jeffrey and Schwaller, Mathew and Hall, Forrest},
  title     = {On the blending of Landsat and MODIS surface reflectance data to generate synthetic Landsat imagery with high temporal resolution},
  journal   = {IEEE Transactions on Geoscience and Remote Sensing},
  volume    = {44},
  number    = {8},
  pages     = {2207--2218},
  year      = {2006},
  doi       = {10.1109/TGRS.2006.872081},
  abstract  = {A new algorithm, the Spatial and Temporal Adaptive Reflectance Fusion Model (STARFM), has been developed to blend Landsat and MODIS surface reflectance data to predict daily surface reflectance at Landsat spatial resolution. The method is based on using one or two pairs of concurrent Landsat and MODIS data along with one MODIS observation at the prediction date. For each pixel to be predicted, the algorithm selects similar neighboring pixels from the Landsat scene by comparing the MODIS data at the base and prediction dates. The Landsat reflectances of these similar neighboring pixels at the base date are then weighted according to their spectral and spatial similarity to the central pixel to produce the predicted surface reflectance. The algorithm has been tested using data from the NASA LBA (Large-Scale Biosphere-Atmosphere Experiment in Amazonia) study area. Results show that STARFM can accurately predict surface reflectance, capturing both spatial and temporal variability, provided that suitable concurrent Landsat and MODIS data are available.}
}